<table id="myTable" >
  <tr class="header">
   <th>Username</th>
    <th>Title</th>
    <!-- <th>Description</th> -->
    <th colspan="3">Action</th>
  </tr>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
      	<td><%= post.user.username %></td>
        <td><%= post.title %></td>
        <!-- <td><%#= post.description %></td> -->
        <td><%= link_to "show", post, class: "btn btn-outline-warning" %></td>
        <td><%= link_to "Edit", edit_post_path(post), class: "btn btn-outline-primary" %></td>
        <td><%= link_to "Destroy", post_path(post), data: {turbo_method: :delete,
        turbo_confirm: "Are you sure?"}, class: "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table><br>
<%= link_to "New Posts", new_post_path ,class: "btn btn-outline-success"%>
