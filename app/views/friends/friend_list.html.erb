<p style="color: green"><%= notice %></p>

<table id="myTable" >
  <tr class="header">    
    <th>username</th>
    <th>Email</th>
    <th colspan="2">action</th>
  </tr>
  <tbody>
    <%# debugger %>
    <% @friends.each do |friend| %>
      <tr>
        <% if (friend.sender.id == current_user.id) &&  friend.is_sender %>
          <td><%= friend.receiver.username %></td>
          <td><%= friend.receiver.email %></td>
         <td><%= link_to "Send Message", message_path(sender_id: friend.receiver.id, receiver_id: friend.sender_id),class: "btn btn-outline-danger" %> </td>      
        <% else %>
          <td><%= friend.sender.username %></td>
          <td><%= friend.sender.email %></td>
         <td><%= link_to "Send Message", message_path(sender_id: friend.sender_id, receiver_id: current_user.id),class: "btn btn-outline-danger" %> </td>      

        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


<style>
* {
  box-sizing: border-box;
}
#myInput {
  background-image: url('/css/searchicon.png');
  background-position: 10px 10px;
  background-repeat: no-repeat;
  width: 70%;
  border-radius: 10px;
  font-size: 16px;
  padding: 12px 20px 8px 40px;
  border: 1px solid #ddd;
  margin-bottom: 14px;
}

#myTable {
  border-collapse: collapse;
  width: 100%;
  border: 1px solid #ddd;
  font-size: 16px;
}

#myTable th, #myTable td {
  text-align: left;
  padding: 5px;
}

#myTable tr {
  border-bottom: 1px solid #ddd;
}

#myTable tr.header, #myTable tr:hover {
  background-color: #f1f1f1;
}
</style>

